{
  "name": "koa-sample-web-app-api-mysql",
  "description": "Koa Sample App (handlebars templating + RESTful API using MySQL, on Node.js)",
  "author": "Chris Veness",
  "license": "MIT",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "http://github.com/chrisveness/koa-sample-web-app-api-mysql.git"
  },
  "main": "app.js",
  "scripts": {
    "start": "forever --minUptime 1000 --spinSleepTime 1000 app.js",
    "start-dev": "nodemon -e js,json,html app.js",
    "test": "mocha test/admin.js test/api.js",
    "lint": "eslint --ignore-pattern apps/api/apidoc .",
    "apidoc": "apidoc -i apps/api -o apps/api/apidoc/apidoc"
  },
  "engines": {
    "node": "4.2.1"
  },
  "dependencies": {
    "basic-auth": "^1.0.3",
    "bunyan": "^1.5.1",
    "co": "^4.6.0",
    "co-bcrypt": "^1.0.0",
    "co-child-process": "^0.0.3",
    "co-fs": "^1.2.0",
    "forever": "^0.15.1",
    "js-yaml": "^3.4.3",
    "koa": "^1.1.2",
    "koa-body": "^1.3.0",
    "koa-bunyan": "0.0.2",
    "koa-compose": "^2.3.0",
    "koa-compress": "^1.0.8",
    "koa-flash": "^1.0.0",
    "koa-handlebars": "^0.5.7",
    "koa-helmet": "0.3.0",
    "koa-passport": "^1.2.0",
    "koa-request": "^1.0.0",
    "koa-response-time": "^1.0.2",
    "koa-router": "5.2.1",
    "koa-session": "^3.3.1",
    "koa-static": "^1.5.2",
    "markdown-it": "^5.0.1",
    "mysql-co": "0.0.4",
    "passport-local": "^1.0.0",
    "xmlify": "^1.0.1"
  },
  "devDependencies": {
    "apidoc": "^0.13.1",
    "chai": "^3.4.0",
    "cheerio": "^0.19.0",
    "co-mocha": "^1.1.2",
    "co-supertest": "0.0.10",
    "eslint": "^1.8.0",
    "mocha": "^2.3.3",
    "nodemon": "^1.8.1",
    "npm-check": "^4.1.2",
    "npm-check-updates": "^2.3.4",
    "supertest": "^1.1.0"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "mocha": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "comma-dangle": [ 2, "always-multiline" ],
      "curly": [ 2, "multi-line" ],
      "generator-star-spacing": [ 2, {"before": false, "after": true} ],
      "indent": [ 2, 4, { "SwitchCase": 1 } ],
      "key-spacing": [ 1, { "align": "value" } ],
      "no-console": 1,
      "no-const-assign": 2,
      "no-redeclare": 1,
      "no-shadow": 1,
      "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
      "no-var": 2,
      "object-curly-spacing": [ 2, "always" ],
      "prefer-const": 2,
      "quotes": [ 2, "single", "avoid-escape" ],
      "strict": [ 2, "global" ]
    }
  }
}
